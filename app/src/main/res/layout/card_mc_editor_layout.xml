<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/edit_dialog_root"
    android:orientation="vertical">
    <ScrollView
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:layout_width="fill_parent">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">
            <TextView
                android:text="@string/add_screen_question"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="3dip"/>
            <EditText
                android:id="@+id/edit_dialog_question_mc_entry"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:inputType="textMultiLine"
                android:minLines="3"
                android:gravity="top"
                android:layout_weight="1" />
            <TextView
                android:text="@string/add_screen_option1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="2dip"/>
            <EditText
                android:id="@+id/edit_dialog_option1_entry"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:inputType="textMultiLine"
                android:gravity="top"
                android:minLines="2"
                android:layout_weight="1" />
            <TextView
                android:text="@string/add_screen_option2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="2dip"/>
            <EditText
                android:id="@+id/edit_dialog_option2_entry"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:inputType="textMultiLine"
                android:gravity="top"
                android:minLines="2"
                android:layout_weight="1" />
            <TextView
                android:text="@string/add_screen_option3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="2dip"/>
            <EditText
                android:id="@+id/edit_dialog_option3_entry"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:inputType="textMultiLine"
                android:gravity="top"
                android:minLines="2"
                android:layout_weight="1" />
            <TextView
                android:text="@string/add_screen_option4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="2dip"/>
            <EditText
                android:id="@+id/edit_dialog_option4_entry"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:inputType="textMultiLine"
                android:gravity="top"
                android:minLines="2"
                android:layout_weight="1" />
            <TextView
                android:text="@string/add_screen_answer"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="3dip"/>
            <Spinner
                android:id="@+id/edit_dialog_answer_spinner_entry"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>